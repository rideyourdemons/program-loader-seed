# Environment Configuration for Program Loader Seed
# Copy this file to .env and update with your values

# RYD Site Path (optional - for sandbox servers)
# Set this to the path where your RYD Site codebase is located
# Example: RYD_SITE_PATH=C:\Users\YourName\Documents\Site
# Example (Mac/Linux): RYD_SITE_PATH=/Users/YourName/Documents/Site
RYD_SITE_PATH=

# Compliance Settings
# Enable/disable compliance checking (default: enabled)
COMPLIANCE_ENABLED=true

# Enable automatic fixes for compliance issues (default: disabled)
AUTO_FIX_ENABLED=false

# Strict mode for compliance (default: lenient)
COMPLIANCE_STRICT_MODE=false

# Auto-detect user region (default: enabled)
AUTO_DETECT_REGION=true

# Logging Level (optional)
# Options: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Firebase Configuration (optional)
# If using Firebase, set these or use firebase-config.json
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_SERVICE_ACCOUNT_PATH=path/to/service-account.json








