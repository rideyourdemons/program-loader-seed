/**
 * Citation Badge Styles
 */

.citation-badge {
  margin: 16px 0;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  background-color: #f9fafb;
}

.citation-badge-compact {
  display: inline-flex;
  align-items: center;
  gap: 4px;
}

.citation-trigger {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  background: none;
  border: none;
  text-align: left;
  cursor: pointer;
  color: #374151;
  font-size: 14px;
  transition: background-color 0.2s;
}

.citation-trigger:hover {
  background-color: #f3f4f6;
}

.citation-icon {
  font-size: 18px;
}

.citation-label {
  font-weight: 500;
  flex: 1;
}

.citation-arrow {
  font-size: 12px;
  color: #6b7280;
  transition: transform 0.2s;
}

.citation-trigger[aria-expanded="true"] .citation-arrow {
  transform: rotate(90deg);
}

.citation-details {
  border-top: 1px solid #e5e7eb;
  padding: 16px;
  background-color: white;
  animation: citationExpand 0.2s ease-out;
}

@keyframes citationExpand {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 1000px;
  }
}

.citation-content {
  font-size: 14px;
  line-height: 1.6;
  color: #4b5563;
}

.citation-title {
  margin: 0 0 12px 0;
  font-size: 16px;
  font-weight: 600;
  color: #1f2937;
}

.citation-author,
.citation-publication,
.citation-year {
  margin-bottom: 8px;
}

.citation-author strong,
.citation-publication strong,
.citation-year strong {
  color: #374151;
  margin-right: 4px;
}

.citation-text {
  margin: 12px 0;
  padding: 12px;
  background-color: #f9fafb;
  border-left: 3px solid #3b82f6;
  font-style: italic;
  color: #4b5563;
}

.citation-link,
.citation-doi {
  display: inline-block;
  margin-top: 12px;
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
}

.citation-link:hover,
.citation-doi:hover {
  text-decoration: underline;
  color: #2563eb;
}

.citation-doi {
  margin-left: 12px;
  font-size: 12px;
}

.citation-findings {
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid #e5e7eb;
}

.citation-findings strong {
  display: block;
  margin-bottom: 8px;
  color: #374151;
}

.citation-findings ul {
  margin: 0;
  padding-left: 20px;
}

.citation-findings li {
  margin-bottom: 4px;
  color: #4b5563;
}

/* Compact version */
.citation-link {
  background: none;
  border: none;
  color: #3b82f6;
  cursor: pointer;
  text-decoration: underline;
  font-size: inherit;
  padding: 0;
}

.citation-link:hover {
  color: #2563eb;
}




