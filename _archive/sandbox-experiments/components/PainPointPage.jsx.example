/**
 * Pain Point Page Component
 * 
 * Displays a pain point page with tools, research, and related content
 * 
 * Usage:
 * import PainPointPage from './components/PainPointPage';
 * 
 * <PainPointPage 
 *   painPointId="depression" 
 *   or 
 *   painPointSlug="depression-help"
 * />
 */

import React, { useState, useEffect } from 'react';

export default function PainPointPage({ painPointId, painPointSlug }) {
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const [pageData, setPageData] = useState(null);

  useEffect(() => {
    loadPainPointPage();
  }, [painPointId, painPointSlug]);

  const loadPainPointPage = async () => {
    try {
      setLoading(true);
      setError(null);

      // TODO: Replace with actual API call
      // const data = await getPainPointPage(painPointId || painPointSlug);
      // setPageData(data);

      // Mock data for example
      setPageData({
        painPoint: {
          id: 'depression',
          title: 'Depression',
          description: 'Depression is more than feeling sad. It affects how you think, feel, and handle daily activities.',
          slug: 'depression'
        },
        tools: [
          {
            id: 'tool-1',
            title: 'Grounding Technique',
            description: 'A simple technique to reconnect with the present moment.',
            duration: '5-10 minutes',
            difficulty: 'Easy'
          },
          {
            id: 'tool-2',
            title: 'Cognitive Reframing',
            description: 'Change the way you think about difficult situations.',
            duration: '15-20 minutes',
            difficulty: 'Medium'
          },
          {
            id: 'tool-3',
            title: 'Gratitude Practice',
            description: 'Focus on what you\'re grateful for to shift perspective.',
            duration: '10 minutes',
            difficulty: 'Easy'
          }
        ],
        research: [
          {
            id: 'research-1',
            title: 'Cognitive Behavioral Therapy for Depression',
            authors: ['Smith, J.', 'Doe, A.'],
            publication: 'Journal of Mental Health',
            year: 2020,
            url: 'https://example.com/research'
          }
        ],
        relatedPainPoints: [
          { id: 'anxiety', title: 'Anxiety' },
          { id: 'stress', title: 'Stress' }
        ]
      });

      setLoading(false);
    } catch (err) {
      setError(err.message);
      setLoading(false);
    }
  };

  if (loading) {
    return (
      <div className="pain-point-page loading">
        <div className="loading-spinner">Loading...</div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="pain-point-page error">
        <h1>Error</h1>
        <p>{error}</p>
      </div>
    );
  }

  if (!pageData || !pageData.painPoint) {
    return (
      <div className="pain-point-page not-found">
        <h1>Pain Point Not Found</h1>
        <p>We couldn't find the pain point you're looking for.</p>
      </div>
    );
  }

  const { painPoint, tools, research, relatedPainPoints } = pageData;

  return (
    <div className="pain-point-page">
      {/* Breadcrumbs */}
      <nav className="breadcrumbs" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span> / </span>
        <a href={`/category/${painPoint.gateId || 'all'}`}>
          {painPoint.gateName || 'Pain Points'}
        </a>
        <span> / </span>
        <span>{painPoint.title}</span>
      </nav>

      {/* Header */}
      <header className="pain-point-header">
        <h1>{painPoint.title}</h1>
        <p className="pain-point-description">{painPoint.description}</p>
        <p className="disclaimer">
          <small>Educational purposes only. Not a replacement for professional treatment.</small>
        </p>
      </header>

      {/* Three Tools Section */}
      <section className="tools-section">
        <h2>Three Free Self-Help Tools</h2>
        <p className="section-intro">
          We offer <strong>three proven self-help techniques</strong> completely free, 
          backed by peer-reviewed research. No signup required. Start immediately.
        </p>

        <div className="tools-grid">
          {tools && tools.map((tool, index) => (
            <ToolCard key={tool.id || index} tool={tool} index={index + 1} />
          ))}
        </div>
      </section>

      {/* Research Section */}
      {research && research.length > 0 && (
        <ResearchSection research={research} />
      )}

      {/* Related Content */}
      {relatedPainPoints && relatedPainPoints.length > 0 && (
        <section className="related-section">
          <h2>Related Content</h2>
          <div className="related-pain-points">
            {relatedPainPoints.map((related) => (
              <a 
                key={related.id}
                href={`/pain-point/${related.slug || related.id}`}
                className="related-item"
              >
                {related.title}
              </a>
            ))}
          </div>
        </section>
      )}
    </div>
  );
}

// Tool Card Component
function ToolCard({ tool, index }) {
  const [expanded, setExpanded] = useState(false);

  return (
    <div className={`tool-card ${expanded ? 'expanded' : ''}`}>
      <div className="tool-card-header" onClick={() => setExpanded(!expanded)}>
        <div className="tool-number">{index}</div>
        <div className="tool-info">
          <h3 className="tool-title">{tool.title}</h3>
          <div className="tool-meta">
            {tool.duration && <span className="meta-item">‚è± {tool.duration}</span>}
            {tool.difficulty && <span className="meta-item">üìä {tool.difficulty}</span>}
          </div>
        </div>
        <button className="expand-button" aria-label={expanded ? 'Collapse' : 'Expand'}>
          {expanded ? '‚àí' : '+'}
        </button>
      </div>

      {expanded && (
        <div className="tool-card-content">
          <p className="tool-description">{tool.description}</p>
          <button className="start-tool-button">Start Tool</button>
        </div>
      )}
    </div>
  );
}

// Research Section Component
function ResearchSection({ research }) {
  const [expanded, setExpanded] = useState(false);

  return (
    <section className="research-section">
      <button 
        className="research-toggle"
        onClick={() => setExpanded(!expanded)}
        aria-expanded={expanded}
      >
        <h2>Research & Evidence</h2>
        <span className="toggle-icon">{expanded ? '‚àí' : '+'}</span>
      </button>

      {expanded && (
        <div className="research-content">
          <p className="research-intro">
            Learn the science behind these techniques. All tools are backed by peer-reviewed research.
          </p>

          <div className="research-list">
            {research.map((item) => (
              <div key={item.id} className="research-item">
                <h3>{item.title}</h3>
                {item.authors && (
                  <p className="research-authors">By {item.authors.join(', ')}</p>
                )}
                {item.publication && (
                  <p className="research-publication">{item.publication} ({item.year})</p>
                )}
                {item.url && (
                  <a 
                    href={item.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    className="research-link"
                  >
                    View Full Research ‚Üí
                  </a>
                )}
              </div>
            ))}
          </div>
        </div>
      )}
    </section>
  );
}

