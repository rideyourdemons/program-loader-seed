    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --color-text: #1a1a1a;
            --color-text-secondary: #666;
            --color-border: #e0e0e0;
            --color-bg: #ffffff;
            --color-bg-secondary: #fafafa;
            --spacing-md: 16px;
            --spacing-lg: 24px;
            --spacing-xl: 32px;
            --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            font-family: var(--font-family);
            line-height: 1.6;
            color: var(--color-text);
            background: var(--color-bg);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: var(--spacing-md);
        }

        /* Header */
        header {
            background: #1a1a1a;
            color: #ffffff;
            border-bottom: 1px solid #333;
            padding: 20px 0;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 var(--spacing-md);
        }

        header h1 {
            font-size: 1.8em;
            font-weight: 600;
            margin: 0;
            color: #ffffff;
        }

        .header-nav {
            display: flex;
            gap: 30px;
            align-items: center;
        }

        .header-nav a {
            color: #ffffff;
            text-decoration: none;
            font-size: 1em;
            transition: opacity 0.2s;
        }

        .header-nav a:hover {
            opacity: 0.8;
        }

        /* Main Content */
        main {
            padding: var(--spacing-xl) 0;
        }

        .hero-section {
            text-align: center;
            padding: var(--spacing-xl) 0;
            margin-bottom: var(--spacing-xl);
        }

        .hero-section h2 {
            font-size: 2.5em;
            margin-bottom: var(--spacing-md);
            color: var(--color-text);
        }

        .hero-section p {
            font-size: 1.2em;
            color: var(--color-text-secondary);
            max-width: 600px;
            margin: 0 auto;
        }

        /* Tool of the Day */
        .tool-of-day {
            background: var(--color-bg);
            border: 1px solid var(--color-border);
            border-radius: 8px;
            padding: var(--spacing-xl);
            margin-bottom: var(--spacing-xl);
        }

        .tool-of-day h2 {
            color: var(--color-text);
            margin-bottom: var(--spacing-lg);
            font-size: 1.8em;
            font-weight: 600;
        }

        .tool-card {
            background: var(--color-bg-secondary);
            border-left: 4px solid #667eea;
            padding: var(--spacing-lg);
            border-radius: 8px;
        }

        .tool-title {
            font-size: 1.8em;
            color: var(--color-text);
            margin-bottom: var(--spacing-md);
            font-weight: 600;
        }

        .tool-description {
            font-size: 1.1em;
            color: var(--color-text-secondary);
            margin-bottom: var(--spacing-lg);
        }

        .tool-meta {
            display: flex;
            gap: var(--spacing-lg);
            margin-bottom: var(--spacing-lg);
            flex-wrap: wrap;
        }

        .tool-meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--color-text-secondary);
        }

        .badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
        }

        .badge-beginner {
            background: #d4edda;
            color: #155724;
        }

        .badge-intermediate {
            background: #fff3cd;
            color: #856404;
        }

        .rotation-info {
            background: #e7f3ff;
            border-left: 4px solid #2196F3;
            padding: var(--spacing-md);
            border-radius: 6px;
            margin-top: var(--spacing-md);
            font-size: 0.9em;
            color: var(--color-text-secondary);
        }

        /* Footer */
        footer {
            background: var(--color-bg);
            border-top: 1px solid var(--color-border);
            margin-top: var(--spacing-xl);
            padding: var(--spacing-xl) 0;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 var(--spacing-md);
            text-align: center;
        }

        .footer-links {
            margin-bottom: var(--spacing-md);
        }

        .footer-links a {
            color: var(--color-text);
            text-decoration: none;
            margin: 0 var(--spacing-md);
        }

        .footer-links a:hover {
            text-decoration: underline;
        }

        .footer-copyright {
            color: var(--color-text-secondary);
            font-size: 0.9em;
        }

        .disclaimer {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            padding: var(--spacing-md);
            margin: var(--spacing-xl) 0;
            border-radius: 4px;
            font-size: 0.9em;
            color: var(--color-text-secondary);
        }

        @media (max-width: 768px) {
            .header-nav {
                gap: 15px;
                font-size: 0.9em;
            }

            .hero-section h2 {
                font-size: 2em;
            }
        }
    </style>
