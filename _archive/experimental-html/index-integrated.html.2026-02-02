        // Tool rotation logic
        function getToolIndexForDate(date, toolCount) {
            const year = date.getFullYear();
            const startOfYear = new Date(year, 0, 1);
            const dayOfYear = Math.floor((date - startOfYear) / (1000 * 60 * 60 * 24));
            const seed = year * 366 + dayOfYear;
            return seed % toolCount;
        }

        function getToolOfTheDay(tools, targetDate = null) {
            const today = targetDate || new Date();
            const toolIndex = getToolIndexForDate(today, tools.length);
            return tools[toolIndex];
        }

        function getRotationSchedule(tools, daysAhead = 7) {
            const schedule = [];
            const today = new Date();
            
            for (let i = 0; i < daysAhead; i++) {
                const date = new Date(today);
                date.setDate(today.getDate() + i);
                const toolIndex = getToolIndexForDate(date, tools.length);
                const tool = tools[toolIndex];
                
                schedule.push({
                    date: date.toISOString().split('T')[0],
                    dateObj: date,
                    tool: tool,
                    toolIndex: toolIndex,
                    isToday: i === 0
                });
            }
            
            return schedule;
        }

        function getNextRotationInfo() {
            const now = new Date();
            const tomorrow = new Date(now);
            tomorrow.setDate(now.getDate() + 1);
            tomorrow.setHours(0, 0, 0, 0);
            
            const msUntilMidnight = tomorrow - now;
            const hoursUntil = Math.floor(msUntilMidnight / (1000 * 60 * 60));
            const minutesUntil = Math.floor((msUntilMidnight % (1000 * 60 * 60)) / (1000 * 60));
            
            return {
                hoursUntil: hoursUntil,
                minutesUntil: minutesUntil,
                formatted: `${hoursUntil}h ${minutesUntil}m`
            };
        }

        function formatDate(date) {
            return date.toLocaleDateString('en-US', { 
                weekday: 'long', 
                month: 'long', 
                day: 'numeric',
                year: 'numeric'
            });
        }

        function formatShortDate(date) {
            return date.toLocaleDateString('en-US', { 
                weekday: 'short', 
                month: 'short', 
                day: 'numeric'
            });
        }

        function updateToolOfDay(targetDate = null) {
            try {
                const tool = getToolOfTheDay(mockTools, targetDate);
                const rotationInfo = getNextRotationInfo();
                
                const titleEl = document.getElementById('toolTitle');
                const descEl = document.getElementById('toolDescription');
                const durationEl = document.getElementById('toolDuration');
                const difficultyEl = document.getElementById('toolDifficulty');
                const rotationEl = document.getElementById('rotationTime');
                
                if (titleEl) titleEl.textContent = tool.title || 'Breathing Exercise';
                if (descEl) descEl.textContent = tool.description || 'A simple breathing technique for stress management and relaxation';
                if (durationEl) durationEl.textContent = tool.duration || '5 minutes';
                
                if (difficultyEl) {
                    difficultyEl.textContent = tool.difficulty || 'beginner';
                    difficultyEl.className = `badge badge-${tool.difficulty || 'beginner'}`;
                }
                
                if (rotationEl) rotationEl.textContent = rotationInfo.formatted || '24h 0m';
            } catch (error) {
                console.error('Error updating Tool of the Day:', error);
                // Fallback: show default tool
                const titleEl = document.getElementById('toolTitle');
                if (titleEl) titleEl.textContent = 'Breathing Exercise';
                const descEl = document.getElementById('toolDescription');
                if (descEl) descEl.textContent = 'A simple breathing technique for stress management and relaxation';
                const durationEl = document.getElementById('toolDuration');
                if (durationEl) durationEl.textContent = '5 minutes';
                const difficultyEl = document.getElementById('toolDifficulty');
                if (difficultyEl) {
                    difficultyEl.textContent = 'beginner';
                    difficultyEl.className = 'badge badge-beginner';
                }
            }
        }

        function updateSchedule(days = 7) {
            const schedule = getRotationSchedule(mockTools, days);
            const scheduleList = document.getElementById('scheduleList');
            
            scheduleList.innerHTML = schedule.map(day => {
                const dateStr = formatShortDate(day.dateObj);
                const dayClass = day.isToday ? 'schedule-day today' : 'schedule-day';
                return `
                    <div class="${dayClass}">
                        <span class="date-label">${dateStr}</span>
                        <span class="tool-name">${day.tool.title}</span>
                    </div>
                `;
            }).join('');
        }

        // Initialize compliance state if available
        if (typeof ComplianceState !== 'undefined') {
            window.complianceState = window.complianceState || new ComplianceState();
        }

        // Client-side compliance validator (static-safe, no API calls)
        let regionProfilesCache = null;
        let stateRegistryCache = null;

        async function loadConfigs() {
            if (!regionProfilesCache) {
                try {
                    const response = await fetch('/config/region-profiles.json', { cache: 'no-store' });
                    regionProfilesCache = await response.json();
                } catch (error) {
                    console.error('Failed to load region profiles:', error);
                    return null;
                }
            }
            if (!stateRegistryCache) {
                try {
                    const response = await fetch('/config/state-registry.json', { cache: 'no-store' });
                    stateRegistryCache = await response.json();
                } catch (error) {
                    console.error('Failed to load state registry:', error);
                }
            }
            return { regionProfiles: regionProfilesCache, stateRegistry: stateRegistryCache };
        }

        // Simple client-side ethics guard
        function checkContentEthics(content) {
            const violations = [];
            const normalized = content.toLowerCase();

            // Block clinical terms
            const clinicalTerms = ['diagnose', 'diagnosis', 'treat', 'treatment', 'therapy', 'heal', 'cure', 'disorder', 'condition', 'syndrome'];
            clinicalTerms.forEach(term => {
                if (normalized.includes(term)) {
                    violations.push(`CLINICAL_TERM: "${term}"`);
                }
            });

            // Block urgency patterns
            const urgencyPatterns = [/you need this/i, /don't miss/i, /fix yourself/i, /must do/i, /urgent/i];
            urgencyPatterns.forEach(pattern => {
                if (pattern.test(content)) {
                    violations.push(`URGENCY_PATTERN: "${pattern}"`);
                }
            });

            // Block outcome promises
            const outcomePatterns = [/guaranteed/i, /will fix/i, /will cure/i, /will heal/i, /promise/i];
            outcomePatterns.forEach(pattern => {
                if (pattern.test(content)) {
                    violations.push(`OUTCOME_PROMISE: "${pattern}"`);
                }
            });

            return {
                allowed: violations.length === 0,
                violations
            };
        }

        // Compliance checking functions (client-side only, no API)
        window.checkCompliance = async function() {
            const regionSelect = document.getElementById('regionSelect');
            const resultDiv = document.getElementById('complianceResult');
            
            if (!regionSelect || !resultDiv) {
                console.warn('Compliance UI elements not found');
                return;
            }
            
            const region = regionSelect.value || 'US';
            
            // Update compliance state
            if (window.complianceState) {
                window.complianceState.setRegion(region);
            }
            
            resultDiv.innerHTML = '<p>Validating configuration...</p>';
            resultDiv.className = 'compliance-result active';
            
            try {
                // Client-side validation - load configs from static files
                const configs = await loadConfigs();
                if (!configs || !configs.regionProfiles) {
                    throw new Error('Failed to load configuration files');
                }
                const regionData = configs.regionProfiles.regions[region];
                if (!regionData) {
                    throw new Error(`Region "${region}" not found`);
                }
                
                // Build compliance result from config
                const blockers = [];
                const warnings = [];
                if (!regionData.required_disclaimers || regionData.required_disclaimers.length === 0) {
                    warnings.push({ issue: 'No required disclaimers configured' });
                }
                if (regionData.commerce_compliance && !regionData.commerce_compliance.no_outcome_claims) {
                    blockers.push({ issue: 'Commerce compliance: outcome claims not prohibited' });
                }
                
                const complianceData = {
                    compliant: blockers.length === 0,
                    blockers,
                    warnings
                };
                
                const isCompliant = complianceData.compliant;
                resultDiv.className = `compliance-result active ${isCompliant ? 'compliant' : 'non-compliant'}`;
                
                let html = `
                    <h3>${isCompliant ? 'Ã¢Å“"¦ Compliant' : 'Ã¢Å¡  Non-Compliant'}</h3>
                    <p><strong>Region:</strong> ${region}</p>
                `;
                
                if (complianceData.blockers && complianceData.blockers.length > 0) {
                    html += `<h4>Blockers (${complianceData.blockers.length}):</h4>`;
                    complianceData.blockers.forEach(blocker => {
                        html += `<div class="compliance-issue">${blocker.issue || blocker}</div>`;
                    });
                }
                
                if (complianceData.warnings && complianceData.warnings.length > 0) {
                    html += `<h4>Warnings (${complianceData.warnings.length}):</h4>`;
                    complianceData.warnings.forEach(warning => {
                        html += `<div class="compliance-issue" style="border-left-color: #ffc107;">${warning.issue || warning}</div>`;
                    });
                }
                
                if (isCompliant && (!complianceData.blockers || complianceData.blockers.length === 0) && (!complianceData.warnings || complianceData.warnings.length === 0)) {
                    html += '<p style="margin-top: 15px;">✓ All compliance checks passed!</p>';
                }
                
                resultDiv.innerHTML = html;
            } catch (error) {
                resultDiv.className = 'compliance-result active non-compliant';
                resultDiv.innerHTML = `<h3>Error</h3><p>${error.message}</p>`;
            }
        };

        window.testContent = async function() {
            const region = document.getElementById('regionSelect').value;
            const resultDiv = document.getElementById('complianceResult');
            
            const testContent = {
                text: 'This is a test content that needs compliance checking',
                disclaimers: []
            };
            
            resultDiv.innerHTML = '<p>Testing content...</p>';
            resultDiv.className = 'compliance-result active';
            
            try {
                // Client-side validation only
                const ethicsCheck = checkContentEthics(testContent.text);
                const configs = await loadConfigs();
                
                const blockers = [];
                const warnings = [];
                
                if (!ethicsCheck.allowed) {
                    blockers.push(...ethicsCheck.violations.map(v => ({ issue: v })));
                }
                
                if (configs && configs.regionProfiles) {
                    const regionData = configs.regionProfiles.regions[region];
                    if (regionData && regionData.required_disclaimers) {
                        const hasDisclaimer = regionData.required_disclaimers.some(d => 
                            testContent.text.toLowerCase().includes(d.toLowerCase().substring(0, 20))
                        );
                        if (!hasDisclaimer) {
                            warnings.push({ issue: 'Content may need region-specific disclaimers' });
                        }
                    }
